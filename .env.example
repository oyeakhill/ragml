# Vector Store Settings (Optional - defaults shown)
VECTOR_STORE_TYPE=chroma
CHROMA_PERSIST_DIR=./chroma_db

# Chunking Settings (Optional - defaults shown)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Retrieval Settings (Optional - defaults shown)
TOP_K_RESULTS=5
